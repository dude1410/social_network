<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="team12" id="24-05-2021_create_table_message">
        <createTable tableName="message">
            <column name="id" type="INT4" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="recipient_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="message_text" type="TEXT">
                <constraints nullable="false"/>
            </column>
            <column name="read_status_id" type="INT4">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>