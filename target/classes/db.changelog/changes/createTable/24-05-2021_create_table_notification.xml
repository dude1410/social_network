<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="team12" id="24-05-2021_create_table_notification">
        <createTable tableName="notification">
            <column name="id" type="INT4" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="type_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="sent_time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="person_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="entity_id" type="INT4">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>