<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet author="team12" id="23-05-2021_create_table_friendship">
        <createTable tableName="friendship">
            <column name="id" type="INT4" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="status_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="src_person_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="dst_person_id" type="INT4">
                <constraints nullable="false"/>
            </column>
            <column name="time" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>